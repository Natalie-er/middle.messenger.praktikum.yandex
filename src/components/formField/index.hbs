<div class="form-field {{classes}}">
    <div class="form-field__inner">
        <input
            id="{{id}}"
            type="{{type}}"
            name="{{name}}"
            class="form-field__input {{inputClasses}}"
        />
        <label
            for="{{id}}"
            class="form-field__label {{labelClasses}}"
        >{{label}}</label>
    </div>
    {{#if error}}
        <span class="form-field__error">{{error}}</span>
    {{/if}}
</div>
