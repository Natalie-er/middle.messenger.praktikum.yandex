<div class="modal">
    <form class="modal__inner">
        <h1 class="modal__head text-h1">Вход</h1>
        <div class="modal__body">
            {{> FormField id='login' label='Логин' }}
            {{> FormField id='password' label='Пароль' type='password' }}
        </div>
        <div class="modal__footer">
            {{> Button text='Авторизоваться' }}
            {{> Link href='/signup' text='Нет аккаунта?' classes='modal__footer-link text-h5' }}
        </div>
    </form>
</div>
